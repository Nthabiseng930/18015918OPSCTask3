<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".TargetActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/physioGoBackIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:src="@drawable/back_arrow1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/txt_color"
            android:text="Targets"
            android:layout_gravity="center"
            android:gravity="center"
            android:includeFontPadding="false"
            android:fontFamily="@font/roboto_light"/>

    </FrameLayout>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_marginLeft="80dp"
        android:layout_centerInParent="true"
        android:src="@drawable/logo"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight"
            android:fontFamily="@font/roboto_light"
            android:textSize="18dp"
            android:textColor="@color/colorAccent"/>

        <EditText
            android:id="@+id/weightTargetET"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:fontFamily="@font/roboto_light"
            android:hint="Set Weight Target"
            android:inputType="text"
            android:letterSpacing="0.033"
            android:maxLength="25"
            android:maxLines="1"
            android:paddingTop="12dp"
            android:paddingBottom="20dp"
            android:textColor="@color/txt_color"
            android:textColorHint="@color/gray_cfd1d3"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Calorie Intake"
            android:fontFamily="@font/roboto_light"
            android:textSize="18dp"
            android:textColor="@color/colorAccent"/>

        <EditText
            android:id="@+id/caLorieIntakeET"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:fontFamily="@font/roboto_light"
            android:hint="Set Calorie Intake Target"
            android:inputType="text"
            android:letterSpacing="0.033"
            android:maxLength="25"
            android:maxLines="1"
            android:paddingTop="12dp"
            android:paddingBottom="20dp"
            android:textColor="@color/txt_color"
            android:textColorHint="@color/gray_cfd1d3"
            android:textSize="15sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/saveTargetTV"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/black_rect"
        android:fontFamily="@font/roboto_light"
        android:gravity="center"
        android:includeFontPadding="false"
        android:padding="15dp"
        android:text="Save"
        android:textColor="@color/white"
        android:textSize="18dp" />

</LinearLayout>