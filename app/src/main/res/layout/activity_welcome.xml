<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home"
            android:id="@+id/ivMain" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:text="Home"
            android:textSize="20dp"
            android:fontFamily="@font/roboto_light"
            android:layout_marginStart="15dp"/>

        <TextView
            android:id="@+id/userNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:text="Home"
            android:textSize="18dp"
            android:fontFamily="@font/roboto_light"
            android:layout_marginStart="15dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/viewLine"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/logo"/>

    <TextView
        android:id="@+id/physioInfoTV"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="300dp"
        android:text="Physiological Information"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:fontFamily="@font/roboto_light"
        android:background="@drawable/black_rect"
        android:gravity="center"
        android:includeFontPadding="false"
        android:layout_marginTop="50dp"
        android:padding="15dp"/>

    <TextView
        android:id="@+id/recordMealTV"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="370dp"
        android:text="Record Meal"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:fontFamily="@font/roboto_light"
        android:background="@drawable/black_rect"
        android:gravity="center"
        android:includeFontPadding="false"
        android:layout_marginTop="50dp"
        android:padding="15dp"/>

    <TextView
        android:id="@+id/settingsTV"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="440dp"
        android:text="Settings"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:fontFamily="@font/roboto_light"
        android:background="@drawable/black_rect"
        android:gravity="center"
        android:includeFontPadding="false"
        android:layout_marginTop="50dp"
        android:padding="15dp"/>


    <TextView
        android:id="@+id/viewTV"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="510dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/black_rect"
        android:fontFamily="@font/roboto_light"
        android:gravity="center"
        android:includeFontPadding="false"
        android:padding="15dp"
        android:text="View"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:layout_marginTop="580dp"
        android:layout_marginLeft="165dp"
        android:background="@color/colorAccent"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_light"/>

</RelativeLayout>