<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ViewData">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dataGoBackIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:src="@drawable/back_arrow1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/txt_color"
            android:text="View Data"
            android:layout_gravity="center"
            android:gravity="center"
            android:includeFontPadding="false"
            android:fontFamily="@font/roboto_light"/>

    </FrameLayout>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_marginLeft="80dp"
        android:layout_centerInParent="true"
        android:src="@drawable/logo"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Target Levels"
            android:fontFamily="@font/roboto_light"
            android:textSize="22dp"
            android:textColor="@color/colorAccent"/>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2">

            <TextView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Weight"
                android:fontFamily="@font/roboto_bold"
                android:textSize="17dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_column="0"
                android:paddingRight="60dp"/>

            <TextView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Calorie Intake"
                android:fontFamily="@font/roboto_bold"
                android:textSize="17dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_column="1"
                android:paddingRight="0dp"/>

        </GridLayout>
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2">

            <TextView
                android:id="@+id/targetWeightData"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="value1"
                android:fontFamily="@font/roboto_light"
                android:textSize="18dp"
                android:textColor="@color/colorAccent"
                android:layout_column="0"
                android:paddingRight="60dp"/>

            <TextView
                android:id="@+id/targetCalorieData"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="value2"
                android:fontFamily="@font/roboto_light"
                android:textSize="18dp"
                android:textColor="@color/colorAccent"
                android:layout_column="1"
                android:paddingRight="0dp"/>

        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Levels"
            android:fontFamily="@font/roboto_light"
            android:textSize="22dp"
            android:layout_marginTop="25dp"
            android:textColor="@color/colorAccent"/>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2">

            <TextView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Weight"
                android:fontFamily="@font/roboto_bold"
                android:textSize="17dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_column="0"
                android:paddingRight="60dp"/>

            <TextView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Height"
                android:fontFamily="@font/roboto_bold"
                android:textSize="17dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_column="1"
                android:paddingRight="0dp"/>

        </GridLayout>
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2">

            <TextView
                android:id="@+id/currentWeightData"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="value1"
                android:fontFamily="@font/roboto_light"
                android:textSize="18dp"
                android:textColor="@color/colorAccent"
                android:layout_column="0"
                android:paddingRight="60dp"/>

            <TextView
                android:id="@+id/currentHeightData"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="value2"
                android:fontFamily="@font/roboto_light"
                android:textSize="18dp"
                android:textColor="@color/colorAccent"
                android:layout_column="1"
                android:paddingRight="0dp"/>

        </GridLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/homeViewDataTV"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/black_rect"
        android:fontFamily="@font/roboto_light"
        android:gravity="center"
        android:includeFontPadding="false"
        android:padding="15dp"
        android:text="Home"
        android:textColor="@color/white"
        android:textSize="18dp" />

</LinearLayout>